<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:background="@drawable/rounded_bg"
    android:paddingTop="@dimen/padding_8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/amountStaticTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/amount"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/amount"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/amountStaticTv" />

    <TextView
        android:id="@+id/cardStaticTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/cardType"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/cardTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/cardType"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@id/view1" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/cardStaticTv" />

    <TextView
        android:id="@+id/referenceStaticTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/reference"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <TextView
        android:id="@+id/referenceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/reference"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toEndOf="@id/referenceStaticTv"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/referenceStaticTv" />

    <TextView
        android:id="@+id/statusStaticTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/status"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <ImageView
        android:id="@+id/statusIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/statusStaticTv"
        app:layout_constraintBottom_toBottomOf="@id/statusStaticTv"
        app:layout_constraintStart_toEndOf="@id/barrier"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_success"
        android:contentDescription="@string/app_name" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/statusStaticTv" />

    <TextView
        android:id="@+id/transactionStaticTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/transaction"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <TextView
        android:id="@+id/transactionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:text="@string/transaction"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="referenceStaticTv,amountStaticTv,transactionStaticTv,cardStaticTv,statusStaticTv" />

</androidx.constraintlayout.widget.ConstraintLayout>